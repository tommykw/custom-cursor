{
  "manifest_version": 3,
  "name": "Custom Cursor for Screen Share",
  "version": "1.0",
  "description": "A Chrome extension that enhances cursor visibility during screen sharing",
  "permissions": [
    "activeTab",
    "tabs",
    "videoCapture"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": [
        "html2canvas.js",
        "gaze-tracker.js",
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "gaze-tracker.js",
        "html2canvas.js",
        "face-api.min.js",
        "models/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
