{
  "manifest_version": 3,
  "name": "Custom Cursor for Screen Share",
  "version": "1.0",
  "description": "A Chrome extension that enhances cursor visibility during screen sharing",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": [
        "face-api.min.js",
        "webgazer.js",
        "html2canvas.js",
        "gaze-tracker.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "face-api.min.js",
      "models/*",
      "webgazer.js",
      "gaze-tracker.js",
      "html2canvas.js"
    ],
    "matches": ["<all_urls>"]
  }]
}
